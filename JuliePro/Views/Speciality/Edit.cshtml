@model SpecialityVM
@{
    ViewData["Title"] = "Edit";
}
<h1>Edit</h1>
<h4>Speciality</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <div class="row p-3 ">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group row">
                    <input asp-for="@Model.Speciality.Id" class="form-control" hidden />
                    <div class="col-4">
                        <label asp-for="@Model.Speciality.Name" class="control-label"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="@Model.Speciality.Name" class="form-control" />
                        <span asp-validation-for="@Model.Speciality.Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group btn btn-primary m-1">
                    <input type="submit" value="Edit" />
                    <i class="fa-solid fa-floppy-disk"></i>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
